<% unless comment.parent_id || !comment.persisted? %>
    <div class="card md-1 mt-1">
        <h6 class="card-title"><%= comment.user.email %></h6>
        <p class="card-subtitle text-muted"><small><%= comment.created_at %></small></p>
        <p class="card-text">
            <%= comment.body %>
        </p>
    </div>
    <% if comment.replies.any? %>
        <% comment.replies.each do |reply| %> 
            <%= render partial: 'comments/reply', locals: { reply: reply } %>
        <% end %>
    <% end %>
    <div id="reply-form-<%= comment.id %>"></div>
<% end %>