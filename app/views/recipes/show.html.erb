<div class="container">
    <div class="row text-left mb-2 mt-2 w">
        <div class="col-4">
            <button type="button" class="btn btn-dark w-100">
                <%= link_to 'Recipes', recipes_path, :class => "link_button" %>
            </button>
        </div>
        <div class="col-4">
            <button type="button" class="btn btn-dark w-100">
                <%= link_to 'Edit', edit_recipe_path(@recipe), :class => "link_button" %>
            </button>
        </div>
        <div class="col-4">
            <button type="button" class="btn btn-dark w-100">
                <%= link_to 'Delete', @recipe, method: :delete, data: { confirm: 'Are you sure?' }, :class => "link_button" %>
            </button>
        </div>
    </div>
    <h3 class="text-center">
        <%= @recipe.name %>
    </h3>
    <p class="card-text">
        <pre class="text-wrap"><%= @recipe.text %></pre>
    </p>
    <h4 class="text-center">ingredients</h4>
    <% @recipe.ingredients.reverse.each do |ingredient| %>
        <div class="text-left">
            <div class="d-flex justify-content-center card-body bg-light rounded mb-1 mt-1">
                <div class="col-6">
                    <h5>
                        <%= ingredient.name  %>
                    </h5>
                </div>
                <div class="col-3">
                    <button type="button" class="btn btn-primary">
                        <%= link_to 'Edit', edit_ingredient_path(ingredient), :class => "link_button" %>
                    </button>
                </div>
                <div class="col-3">
                    <button type="button" class="btn btn-primary">
                        <%= link_to 'Delete', ingredient, method: :delete, data: { confirm: 'Are you sure?' }, :class => "link_button" %>
                    </button>
                </div>
            </div>
        </div>
    <% end %>
</div>