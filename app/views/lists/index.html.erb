<h2 class="text-center">Shopping lists</h2>
<div class="row">
    <div class="col-12">
        <button type="button " class="btn btn-dark w-100">
            <%= link_to "NEW LIST", new_list_path, :class => "link_button" %>
        </button>
    </div>
</div>
<% @lists.each do |list| %>
    <div class="card mt-2">
        <div class="card-body">
            <div class="row text-left">
                <div class="text-center">
                    <h5 class="text-center">
                        <%= list.name  %>
                    </h5>
                </div>
                <div class="d-flex justify-content-around">
                    <button type="button" class="btn btn-primary">
                        <%= link_to 'Show', list_path(list), :class => "link_button" %>
                    </button>
                    <button type="button" class="btn btn-primary">
                        <%= link_to 'Edit', edit_list_path(list), :class => "link_button" %>
                    </button>
                    <button type="button" class="btn btn-primary">
                        <%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, :class => "link_button" %>
                    </button>
                </div>
            </div>
        </div>
    </div>
<% end %>